{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "allowJs": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "experimentalDecorators": true,
	"emitDecoratorMetadata": true,
    "pretty": true,
	"moduleResolution": "node",
	"suppressImplicitAnyIndexErrors": true

  },
  "compileOnSave": true,
  "filesGlob": [
    "./src/**/*.ts",
	"./tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "./typings/index.d.ts",
    "./src/index.ts"
  ]
}
