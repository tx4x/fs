{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "allowJs": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true
  },
  "compileOnSave": false,
  "filesGlob": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./src/prototypes/**",
    "./src/wamp/**"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "./typings/index.d.ts",
    "./src/index.ts"
  ]
}